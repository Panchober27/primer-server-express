    <h3>Login...</h3>

    <div class="collapse login" id="collapseExample">
        <div class="login-triangle"></div>

        <h2 class="login-header">Login</h2>

        <form action="/login_handler" method="POST" class="login-container">
            <p><input name="username" type="email" placeholder="Username"></p>
